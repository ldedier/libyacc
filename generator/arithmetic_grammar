%prefix Term

%tokens

>   Greater
>=  GreaterOrEqual
<   Lesser
<=  LesserOrEqual
&&  And
||  Or
!=  NotEqual
==  Equal
*   Multiply
/   Divide
%   Modulo
-   Minus
+   Plus
INC Inc
DEC Dec
INTEGER    Integer   int
VARIABLE   Variable  string

%nonterminals

%start arithmetic

arithmetic          : AndOr
|                    _EPS_
;
AndOr : comparison
|        AndOr && comparison
|        AndOr || comparison
;
comparison : expr
|        comparison > expr
|        comparison >= expr
|        comparison < expr
|        comparison <= expr
|        comparison != expr
|        comparison == expr
;
expr             : term 
|                  expr + term
|                  expr - term
;
term       :   factor
|              term * factor
|              term / factor
|              term % factor
;
factor         :   INTEGER
|                  VARIABLE
|                  INC VARIABLE
|                  VARIABLE INC
|                  DEC VARIABLE
|                  VARIABLE DEC
|                  - factor
|                  + factor
;
