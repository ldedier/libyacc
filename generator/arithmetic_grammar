%grammarName ArithmeticGrammar

%terminalPrefix Terminal
%nonTerminalPrefix NonTerminal
%prefix Symbol

%returnType int
%contextType CustomStack

#%ContextFileBaseName CustomStack
%contextInstance context
%generateMain true

%blankAsDelimiter true

%tokens

>   Greater
>=  GreaterOrEqual
<   Lesser
<=  LesserOrEqual
&&  And
||  Or
!=  NotEqual
==  Equal
*   Multiply
/   Divide
%   Modulo
-   Minus
+   Plus
++	Inc
--	Dec
INTEGER    Integer		unsigned_int
VARIABLE   Variable 	string

%nonterminals

%start arithmetic

arithmetic          : AndOr
|                    _EPS_
;
AndOr : comparison
|        AndOr && comparison
|        AndOr || comparison
;
comparison : expr
|        comparison > expr
|        comparison >= expr
|        comparison < expr
|        comparison <= expr
|        comparison != expr
|        comparison == expr
;
expr             : term 
|                  expr + term
|                  expr - term
;
term       :   factor
|              term * factor
|              term / factor
|              term % factor
;
factor         :   INTEGER
|                  VARIABLE
|                  ++ VARIABLE
|                  VARIABLE ++
|                  -- VARIABLE
|                  VARIABLE --
|                  - factor
|                  + factor
;
